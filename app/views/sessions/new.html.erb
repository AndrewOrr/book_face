<% provide(:title, "Sign in") %>
<h1>Sign in</h1>
<%if signed_in? %>

  <div class="hero-unit center">
    Please sign out if you wish to use another account.
  </div>

<%else%>

<div class="row">
  <div class="span6 offset3">
  <div class="hero-unit">
    <%= form_for(:session, url: sessions_path) do |f| %>

      <%= f.label :email %>
      <%= f.text_field :email %>

      <%= f.label :password %>
      <%= f.password_field :password %>
    <div class = "center">
      <%= f.submit "Sign in", class: "btn btn-large btn-primary" %>
    <% end %>
    </div>
    </div>
    <p class = "green-links">New user? <%= link_to "Sign up now!", signup_path %></p>
  </div>
</div>

<%end%>